// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id          String   @id @default(cuid())
  password    String
  name        String
  email       String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  type        String
  crp         String?
  cpf         String
  address     String?
  phone       String
  institution String?
  period      Int?

  @@index([name, cpf, crp])
}
